<!DCOTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <link rel="sytlesheet" href="{{ url_for('static', filename='main.css') }}">
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
        <button> type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="{{ url_for('front.index') }}">Jobplus</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nac navbar-nav">
            <li class="active"><a href="#">job<span clss="sr-only"></span></a></li>
            <li class="active"><a href="#">company<span clss="sr-only"></span></a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          {% if not current_user.is_authenticated %}
            <li><a href="#">company_register</a></li>
            <li><a href="#">user_register</a></li>
            <li><a href="#">login</a></li>
          {% else%}
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ current_user.username}}<span class="caret"></span></a>
            <ul class="dropdown-ment">
              <li><a href="#">HomePage</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">logout</a></li>
            </ul>
            </li>
          {% endif %}
        </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    {% block body%}{% endblock %}
    {% block footer %}{% endblock %}
  </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
  </body>
</html>
